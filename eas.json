{
    "cli": {
        "version": ">= 0.42.0"
    },
    "build": {
        "base": {
            "env": {
                "STAGE": "production",
                "NODE_ENV": "production",
                "GOOGLE_SERVICES_FILE": "_"
            }
        },
        "development": {
            "extends": "base",
            "developmentClient": true,
            "distribution": "internal",
            "releaseChannel": "default",
            "android": {
                "buildType": "apk"
            },
            "env": {
                "STAGE": "development",
                "NODE_ENV": "development"
            }
        },
        "preview": {
            "extends": "base",
            "distribution": "internal",
            "releaseChannel": "staging",
            "android": {
                "buildType": "apk"
            },
            "env": {
                "STAGE": "staging"
            }
        },
        "production": {
            "extends": "base",
            "distribution": "store",
            "releaseChannel": "stable",
            "android": {
                "buildType": "app-bundle"
            }
        }
    }
}