{
    "extends": [
        "plugin:@nrwl/nx/react",
        "../../.eslintrc.json"
    ],
    "ignorePatterns": [
        "!**/*",
        ".expo",
        "node_modules"
    ],
    "globals": {
        "__DEV__": "readonly"
    },
    "overrides": [
        {
            "files": [
                "*.ts",
                "*.tsx",
                "*.js",
                "*.jsx"
            ],
            "rules": {
                "@typescript-eslint/ban-ts-comment": "off"
            }
        },
        {
            "files": [
                "*.ts",
                "*.tsx"
            ],
            "rules": {}
        },
        {
            "files": [
                "*.js",
                "*.jsx"
            ],
            "rules": {}
        }
    ]
}