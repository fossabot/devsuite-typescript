{
    "sourceRoot": "packages/endoscope/src",
    "projectType": "application",
    "targets": {
        "build": {
            "executor": "@nrwl/web:webpack",
            "outputs": [
                "{options.outputPath}"
            ],
            "defaultConfiguration": "production",
            "options": {
                "compiler": "swc",
                "generateIndexHtml": false,
                "outputPath": "dist/packages/endoscope",
                "index": "packages/endoscope/src/index.html",
                "baseHref": "/",
                "main": "packages/endoscope/src/panel.tsx",
                "polyfills": "packages/endoscope/src/polyfills.ts",
                "tsConfig": "packages/endoscope/tsconfig.app.json",
                "assets": [
                    "packages/endoscope/src/favicon.svg",
                    {
                        "input": "packages/endoscope/src/assets",
                        "glob": "**/*",
                        "output": "."
                    }
                ],
                "styles": [
                    "packages/endoscope/src/styles.css"
                ],
                "scripts": [],
                "webpackConfig": "packages/endoscope/webpack.config"
            },
            "configurations": {
                "production": {
                    "fileReplacements": [
                        {
                            "replace": "packages/endoscope/src/environments/environment.ts",
                            "with": "packages/endoscope/src/environments/environment.prod.ts"
                        }
                    ],
                    "optimization": true,
                    "outputHashing": "all",
                    "sourceMap": false,
                    "namedChunks": false,
                    "extractLicenses": true,
                    "vendorChunk": false
                },
                "development": {
                    "extractLicenses": false,
                    "optimization": false,
                    "sourceMap": true,
                    "vendorChunk": true
                }
            }
        },
        "serve": {
            "executor": "@nrwl/web:dev-server",
            "options": {
                "buildTarget": "endoscope:build",
                "hmr": true,
                "port": 4210
            },
            "configurations": {
                "production": {
                    "buildTarget": "endoscope:build:production",
                    "hmr": false,
                    "port": 4210
                },
                "development": {
                    "buildTarget": "endoscope:build:development"
                }
            },
            "defaultConfiguration": "development"
        },
        "lint": {
            "executor": "@nrwl/linter:eslint",
            "outputs": [
                "{options.outputFile}"
            ],
            "options": {
                "lintFilePatterns": [
                    "packages/endoscope/**/*.{ts,tsx,js,jsx,json}"
                ]
            }
        },
        "test": {
            "executor": "@nrwl/jest:jest",
            "outputs": [
                "coverage/packages/endoscope"
            ],
            "options": {
                "jestConfig": "packages/endoscope/jest.config.ts",
                "passWithNoTests": true
            }
        },
        "version": {
            "executor": "@jscutlery/semver:version",
            "options": {
                "preset": "conventional",
                "trackDeps": true
            }
        }
    },
    "tags": [
        "scope:ui",
        "scope:dev"
    ],
    "$schema": "..\\..\\node_modules\\nx\\schemas\\project-schema.json"
}