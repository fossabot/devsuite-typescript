{
    "name": "platform-manager",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/platform-manager",
    "projectType": "application",
    "targets": {
        "build": {
            "executor": "@nrwl/next:build",
            "outputs": [
                "{options.outputPath}"
            ],
            "defaultConfiguration": "production",
            "options": {
                "root": "packages/platform-manager",
                "outputPath": "dist/packages/platform-manager"
            },
            "configurations": {
                "development": {
                    "outputPath": "packages/platform-manager"
                },
                "production": {}
            },
            "dependsOn": [
                "build-custom-server"
            ]
        },
        "serve": {
            "executor": "@nrwl/next:server",
            "defaultConfiguration": "development",
            "options": {
                "port": 3000,
                "buildTarget": "platform-manager:build",
                "dev": true,
                "customServerTarget": "platform-manager:serve-custom-server"
            },
            "configurations": {
                "development": {
                    "buildTarget": "platform-manager:build:development",
                    "dev": true,
                    "customServerTarget": "platform-manager:serve-custom-server:development"
                },
                "production": {
                    "buildTarget": "platform-manager:build:production",
                    "dev": false,
                    "customServerTarget": "platform-manager:serve-custom-server:production"
                }
            }
        },
        "export": {
            "executor": "@nrwl/next:export",
            "options": {
                "buildTarget": "platform-manager:build:production"
            }
        },
        "test": {
            "executor": "@nrwl/jest:jest",
            "outputs": [
                "{workspaceRoot}/coverage/{projectRoot}"
            ],
            "options": {
                "jestConfig": "packages/platform-manager/jest.config.ts",
                "passWithNoTests": true
            }
        },
        "lint": {
            "executor": "@nrwl/linter:eslint",
            "outputs": [
                "{options.outputFile}"
            ],
            "options": {
                "lintFilePatterns": [
                    "packages/platform-manager/**/*.{ts,tsx,js,jsx}"
                ]
            }
        },
        "build-custom-server": {
            "executor": "@nrwl/js:tsc",
            "defaultConfiguration": "production",
            "options": {
                "outputPath": "dist/packages/platform-manager",
                "main": "packages/platform-manager/src/server/main.ts",
                "tsConfig": "packages/platform-manager/tsconfig.server.json",
                "clean": false,
                "assets": []
            },
            "configurations": {
                "development": {},
                "production": {}
            }
        },
        "serve-custom-server": {
            "executor": "@nrwl/js:node",
            "defaultConfiguration": "development",
            "options": {
                "buildTarget": "platform-manager:build-custom-server"
            },
            "configurations": {
                "development": {
                    "buildTarget": "platform-manager:build-custom-server:development"
                },
                "production": {
                    "buildTarget": "platform-manager:build-custom-server:production"
                }
            }
        }
    },
    "tags": []
}