{
    "extends": [
        "plugin:@nrwl/nx/react",
        "../../.eslintrc.json"
    ],
    "ignorePatterns": [
        "!**/*",
        ".expo",
        "node_modules",
        "web-build"
    ],
    "overrides": [
        {
            "files": [
                "*.ts",
                "*.tsx",
                "*.js",
                "*.jsx"
            ],
            "rules": {
                "@typescript-eslint/ban-ts-comment": "off"
            },
            "globals": {
                "__CLIENT__": true,
                "__SERVER__": true,
                "__DEV__": true
            }
        },
        {
            "files": [
                "*.ts",
                "*.tsx"
            ],
            "rules": {}
        },
        {
            "files": [
                "*.js",
                "*.jsx"
            ],
            "rules": {}
        }
    ]
}